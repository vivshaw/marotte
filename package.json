{
  "name": "puppet-prerender",
  "version": "0.0.1",
  "description": "\"A CLI utility to statically prerender your dynamic front-end apps, using Puppeteer & Express",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint -p tsconfig.json",
    "pretty": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "tidy": "npm run pretty && npm run lint",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run tidy && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run tidy",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivshaw/puppet-prerender.git"
  },
  "keywords": [
    "puppeteer",
    "prerender",
    "universal",
    "typescript",
    "chromium",
    "express"
  ],
  "author": "vivshaw",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vivshaw/puppet-prerender/issues"
  },
  "homepage": "https://github.com/vivshaw/puppet-prerender#readme",
  "devDependencies": {
    "chalk": "^2.4.1",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.116",
    "@types/mz": "0.0.32",
    "@types/puppeteer": "^1.6.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "mz": "^2.7.0",
    "puppeteer": "^1.7.0"
  }
}
